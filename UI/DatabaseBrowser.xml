<Ui xmlns="http://www.blizzard.com/wow/ui/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    <!-- templates -->
    <Button name="DataTrackerItemResultButton" virtual="true">
        <Size x="750" y="25"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="highlightTexture" file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD" setAllPoints="true" hidden="true" />
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="val1" inherits="GameFontNormalSmall" justifyH="LEFT">
                    <Size x="450" y="25"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString parentKey="val2" inherits="GameFontNormalSmall" justifyH="LEFT">
                    <Size x="50" y="25"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset x="450" y="0"/>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString parentKey="val3" inherits="GameFontNormalSmall" justifyH="LEFT">
                    <Size x="250" y="25"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset x="500" y="0"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter>self.highlightTexture:Show()</OnEnter>
            <OnLeave>self.highlightTexture:Hide()</OnLeave>
        </Scripts>
    </Button>
    <Button name="DataTrackerUnitResultButton" virtual="true">
        <Size x="750" y="25"/>
