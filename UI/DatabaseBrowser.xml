                        </Anchors>
                    </Button>
                    <Button parentKey="itemResult17" inherits="DataTrackerItemResultButton">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.itemResult16" relativePoint="BOTTOMLEFT"/>
                        </Anchors>
                    </Button>
                    <Button parentKey="itemResult18" inherits="DataTrackerItemResultButton">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.itemResult17" relativePoint="BOTTOMLEFT"/>
                        </Anchors>
                    </Button>
                </Frames>
            </Frame>
            <!-- item details -->
            <Frame parentKey="itemDetails" hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" x="20" y="-40" />
                    <Anchor point="BOTTOMRIGHT" x="-17" y="20" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="itemNameTitle" inherits="GameFontNormalLarge" justifyH="LEFT">
                            <Size x="450" y="25"/>
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset x="0" y="0"/>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <!-- controls -->
                    <EditBox parentKey="UnitName" inherits="InputBoxInstructionsTemplate" numeric="false" letters="10" autoFocus="false">
                        <Size x="120" y="30"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="-30"/>
                        </Anchors>
                        <Scripts>
                            <OnTextChanged function="DT_AnyUnitFilter_TextChanged"/>
                        </Scripts>
                    </EditBox>
                    <EditBox parentKey="ZoneName" inherits="InputBoxInstructionsTemplate" numeric="false" letters="10" autoFocus="false">
                        <Size x="120" y="30"/>
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.UnitName" relativePoint="RIGHT" x="10" />
                        </Anchors>
                        <Scripts>
                            <OnTextChanged function="DT_AnyUnitFilter_TextChanged"/>
