                </Frames>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad function="DT_DatabaseBrowser_OnLoad" />
            <OnDragStart function="DT_DatabaseBrowser_OnDragStart" />
            <OnDragStop function="DT_DatabaseBrowser_OnDragStop" />
            <OnShow function="DT_DatabaseBrowser_OnShow" />
