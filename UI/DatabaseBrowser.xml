            <Layer level="ARTWORK">
                <FontString parentKey="unit" inherits="GameFontNormalSmall" justifyH="LEFT">
                    <Size x="250" y="25"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset x="0" y="0"/>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString parentKey="zone" inherits="GameFontNormalSmall" justifyH="LEFT">
                    <Size x="250" y="25"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset x="300" y="0"/>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString parentKey="gold" inherits="GameFontNormalSmall" justifyH="RIGHT">
                    <Size x="100" y="25"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset x="500" y="0"/>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString parentKey="kills" inherits="GameFontNormalSmall" justifyH="RIGHT">
                    <Size x="80" y="25"/>
                    <Anchors>
                        <Anchor point="LEFT">
