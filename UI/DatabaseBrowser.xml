<Ui xmlns="http://www.blizzard.com/wow/ui/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    <Frame name="DT_DatabaseBrowser" 
        parent="UIParent" 
        inherits="UIPanelDialogTemplate"
        enableMouse="true" 
        movable="true" 
        frameStrata="DIALOG" 
        hidden="true" 
        toplevel="true">
        <Size>
            <AbsDimension x="640" y="480" />
        </Size>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Layers>
            <Layer level="HIGHLIGHT">
                <Button parent="UIParent" inherits="UIPanelButtonTemplate">
                    <Size x="200" y="24" />
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="12"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Scripts>
                        <OnClick>print('click!!!')</OnClick>
                    </Scripts>
                </Button>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad function="DT_DatabaseBrowser_OnLoad" />
            <OnDragStart function="DT_DatabaseBrowser_OnDragStart" />
            <OnDragStop function="DT_DatabaseBrowser_OnDragStop" />
            <OnShow function="DT_DatabaseBrowser_OnShow" />
            <OnHide function="DT_DatabaseBrowser_OnHide" />
        </Scripts>
    </Frame>
</Ui>