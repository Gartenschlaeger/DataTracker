<Ui xmlns="http://www.blizzard.com/wow/ui/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    
    <Button name="DT_DatabaseBrowser_ResultEntryTemplate" virtual="true">
		<Size x="750" y="18"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentHighlight" file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD" setAllPoints="true" hidden="true" />
			</Layer>
			<Layer level="ARTWORK">
				<FontString name="$parentIndex" inherits="GameFontNormalSmall" justifyH="RIGHT">
					<Size x="250" y="12"/>
					<Anchors>
						<Anchor point="LEFT"> <Offset x="0" y="0"/></Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentValue" inherits="GameFontNormalSmall" justifyH="RIGHT">
					<Size x="250" y="12"/>
					<Anchors>
						<Anchor point="LEFT"> <Offset x="35" y="0"/></Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentName" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Size x="250" y="12"/>
					<Anchors>
						<Anchor point="LEFT"> <Offset x="115" y="0"/></Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>_G[self:GetName().."Highlight"]:Show()</OnEnter>
			<OnLeave>_G[self:GetName().."Highlight"]:Hide()</OnLeave> 
		</Scripts>
		<NormalText name="$parentNormalText" inherits="GameFontNormalSmall" justifyH="LEFT"/>
	</Button>

    <Frame name="DT_DatabaseBrowser" 
        parent="UIParent" 
        inherits="UIPanelDialogTemplate"
        enableMouse="true" 
        movable="true" 
        frameStrata="DIALOG" 
        hidden="true" 
        toplevel="true"
        virtual="false">

        <Size>
            <AbsDimension x="800" y="548" />
        </Size>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>

        <Frames>
            <EditBox name="DT_DatabaseBrowser_SearchBox" autoFocus="false" historyLines="1" inherits="SearchBoxTemplate" virtual="true">
                <Size x="460" y="26"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" x="20" y="-35" />
                </Anchors>
                <Scripts>
                    <OnEnterPressed function="DT_DatabaseBrowser_OnSearch" />
                </Scripts>
            </EditBox>
            <Button name="DT_DatabaseBrowser_SearchBtn" inherits="UIPanelButtonTemplate" text="Suchen" virtual="true">
                <Size x="96" y="24"/>
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="DT_DatabaseBrowser_SearchBox" x="106" y="0"/>
                </Anchors>
                <Scripts>
                    <OnClick function="DT_DatabaseBrowser_OnSearch" />
                </Scripts>
            </Button>

            <ScrollFrame name="DT_DatabaseBrowser_ScrollBar" inherits="FauxScrollFrameTemplate">
