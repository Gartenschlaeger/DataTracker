                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString parentKey="percentage" inherits="GameFontNormalSmall" justifyH="RIGHT">
                    <Size x="60" y="25"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset x="680" y="0"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter>self.highlightTexture:Show()</OnEnter>
            <OnLeave>self.highlightTexture:Hide()</OnLeave>
        </Scripts>
    </Button>
    <!-- main frame -->
    <Frame name="DataTrackerBrowser" 
        parent="UIParent" 
        inherits="UIPanelDialogTemplate"
        enableMouse="true" 
        movable="true" 
        frameStrata="MEDIUM" 
        hidden="true" 
        toplevel="true"
        virtual="false">
        <Size>
            <AbsDimension x="800" y="548" />
        </Size>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Frames>
            <!-- item search -->
            <Frame parentKey="itemSearch" hidden="true" virtual="true">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" x="20" y="-40" />
                    <Anchor point="BOTTOMRIGHT" x="-17" y="20" />
                </Anchors>
                <Frames>
                    <!-- filters -->
                    <EditBox parentKey="SearchBox" autoFocus="true" historyLines="10" inherits="SearchBoxTemplate">
                        <Size x="250" y="30"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" x="0" y="0" />
                        </Anchors>
                        <Scripts>
                            <OnEnterPressed function="DT_DatabaseBrowser_OnSearch" />
                        </Scripts>
                    </EditBox>
                    <Button parentKey="searchBtn" inherits="UIPanelButtonTemplate">
                        <Size x="95" y="22"/>
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.SearchBox" relativePoint="RIGHT" x="15" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="DT_DatabaseBrowser_OnSearch" />
                        </Scripts>
                    </Button>
                    <Button parentKey="resetBtn" inherits="UIPanelButtonTemplate">
                        <Size x="95" y="22"/>
                        <Anchors>
                            <Anchor point="LEFT" relativeKey="$parent.searchBtn" relativePoint="RIGHT" x="5" />
                        </Anchors>
                        <Scripts>
                            <OnClick function="DT_DatabaseBrowser_OnReset" />
                        </Scripts>
                    </Button>
                    <!-- scroll area -->
                    <ScrollFrame parentKey="itemsScrollFrame" inherits="FauxScrollFrameTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="-20" y="-40"  />
                            <Anchor point="BOTTOMRIGHT" x="-20" y="-5" />
                        </Anchors>
                        <Scripts>
                            <OnVerticalScroll>
                                FauxScrollFrame_OnVerticalScroll(self, offset, 25, DT_DatabaseBrowser_ScrollBar_Update)
                            </OnVerticalScroll>
                        </Scripts>
                    </ScrollFrame>
                    <!-- results -->
                    <Button parentKey="itemResult1" inherits="DataTrackerItemResultButton">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.itemsScrollFrame" relativePoint="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="18" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                    </Button>
                    <Button parentKey="itemResult2" inherits="DataTrackerItemResultButton">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.itemResult1" relativePoint="BOTTOMLEFT"/>
                        </Anchors>
                    </Button>
                    <Button parentKey="itemResult3" inherits="DataTrackerItemResultButton">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.itemResult2" relativePoint="BOTTOMLEFT"/>
                        </Anchors>
                    </Button>
                    <Button parentKey="itemResult4" inherits="DataTrackerItemResultButton">
